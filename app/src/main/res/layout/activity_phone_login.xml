<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PhoneLoginActivity">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/Phone_number_input"
        android:drawableStart="@drawable/phone"
        android:layout_marginTop="180dp"
        android:layout_marginHorizontal="17dp"
        android:textAllCaps="false"
        android:textSize="15dp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:padding="8dp"
        android:background="@drawable/inputs"
        android:hint="write ur Phone Number please"
        android:layout_alignParentStart="true"
        ></EditText>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/Varification_Code_input"
        android:layout_below="@+id/Phone_number_input"
        android:drawableStart="@drawable/password"
        android:layout_marginTop="8dp"
        android:layout_marginHorizontal="17dp"
        android:textAllCaps="false"
        android:textSize="15dp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:padding="8dp"
        android:background="@drawable/inputs"
        android:hint="write Varification Code here....."
        android:layout_alignParentStart="true"
        android:visibility="invisible"
        ></EditText>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/send_ver_code_Button"
        android:background="@drawable/buttons"
        android:text="send varification Code"
        android:layout_marginHorizontal="17dp"
        android:layout_marginTop="1dp"
        android:textAllCaps="false"
        android:textColor="@android:color/background_light"
        android:textSize="19dp"
        android:layout_below="@+id/Varification_Code_input"
        android:textAlignment="center"
        android:textStyle="bold"></Button>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/verify_button"
        android:background="@drawable/buttons"
        android:text="Varify"
        android:layout_marginHorizontal="17dp"
        android:layout_marginTop="1dp"
        android:textAllCaps="false"
        android:textColor="@android:color/background_light"
        android:textSize="19dp"
        android:layout_below="@+id/send_ver_code_Button"
        android:textAlignment="center"
        android:visibility="invisible"
        android:textStyle="bold">

    </Button>







</RelativeLayout>